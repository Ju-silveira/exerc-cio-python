from math import sqrt
nome = str(input('olá mechamo sara qual e seu nome ?:'))
n = int(input(f'{nome} digite um numero :'))
print(f'{nome} o dobro de {n} é {n+n}')
print(f'e o triplo de {n} é {n*3}')
print(f'e a raiz cuadrada de {n} é {sqrt(n)}')
Print(f'obrigado {nome} e voute sempre que presisar :)')

